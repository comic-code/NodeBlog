<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>

<div class="container">
  <div class="row mt-4 align-items-center">
    <h2 class="col">Usuários</h2>
    <a class="btn customButton col-4 me-3" href="/admin/users/create">Novo Usuário</a>
  </div>
  <div class="row my-4">
    <img src="/assets/separator.png" alt="separator">
  </div>
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
        </tr>
      <% }) %>
    </tbody>
    <tfoot>
      <tr>
        <td></td>
        <td></td>
        <td>
          <div class="text-end me-2">
            Total: <%= users.length %>
          </div>
        </td>
      </tr>
    </tfoot>
  </table>
</div>

<%- include('../../partials/footer.ejs') %>