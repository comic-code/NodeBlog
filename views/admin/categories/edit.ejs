<%- include('../../partials/header.ejs') %> 
<body>
  <%- include('../../partials/navbar.ejs') %>
  
  <div class="container">
    <div class="card mt-4">
      <div class="card-header">
        <h2>Edição de categoria</h2>
      </div>
      <div class="card-body">
        <form action="/admin/categories/update" method="post" class="row">
          <div class="col-9">
            <input type="hidden" name="id" value="<%= category.id %>" />
            <input class="form-control" type="text" name="title" placeholder="Nome da categoria" 
              value="<%= category.title %>" autofocus
            >
          </div>
          <div class="col-2">
            <button class="btn btn-success">Editar</button>
          </div>
        </form>
        <hr>
      </div>
    </div>
  </div>
</body>
<%- include('../../partials/footer.ejs') %>