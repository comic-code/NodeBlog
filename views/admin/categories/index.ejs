<%- include('../../partials/header.ejs') %>
<body>
  <%- include('../../partials/navbar.ejs') %>
  <div class="container">
    <hr />
    <div class="row">
      <h2 class="col">Categorias</h2>
      <a class="btn btn-success col-4 me-3 pt-2" href="/admin/categories/new">Nova Categoria</a>
    </div>
    <hr />
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nome</th>
          <th>Slug</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach(category => { %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.title %></td>
            <td><%= category.slug %></td>
            <td class="">
              <button class="btn me-3 border-dark text-light p-1">
                <img width="30" src="/assets/edit.png" alt="edit">
              </button>

              <form method="post" action="/admin/categories/delete" style="display: inline;">
                <input type="hidden" name="id" value="<%= category.id %>"/>
                <button class="btn border-dark p-1">
                  <img width="30" src="/assets/delete.png" alt="del">
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
      <tfoot>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td>
            <div class="text-end me-2">
              Total: <%= categories.length %>
            </div>
          </td>
        </tr>
      </tfoot>
    </table>
  </div>
</body>
<%- include('../../partials/footer.ejs') %>
